<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <template id="report_mrp_bom_sonelco" inherit_id="mrp.report_mrp_bom">
            <xpath expr="//table/thead/tr/th[last()]" position="after">
                <th>
                    <span>Localizaci√≥n</span>
                </th>
            </xpath>
            <xpath expr="//table/tbody/tr/td[last()]" position="after">
                <td/>
            </xpath>
        </template>

        <template id="report_mrp_bom_line_sonelco" inherit_id="mrp.report_mrp_bom_pdf_line">
            <xpath expr="//tr/td[last()]" position="after">
                <td>
                    <span t-att-data-res-id="l['location_plane']">
                        <t t-esc="l['location_plane']"/>
                    </span>
                </td>
            </xpath>
        </template>


        <template id="report_mrp_bom_line_sonelco" inherit_id="mrp.report_mrp_bom_line">
        <xpath expr="//tr/td[last()]" position="before">
            <td t-if="l.get('location_plane', False)">
                <span>
                    <a
                        href="#"
                        t-att-data-res-id="l['location_id'].id"
                        t-att-data-model="'stock.location'"
                        class="o_mrp_bom_action"
                    >
                        <t t-esc="l['location_plane']" />
                    </a>
                </span>
            </td>
        </xpath>
        <xpath
            expr="//tr[hasclass('o_mrp_bom_report_line', 'o_mrp_bom_cost')]"
            position="inside"
        >
            <td />
        </xpath>
    </template>
    </data>
</odoo>
