            <xpath expr="//t[@t-set='address']" position="replace">
                <div style="width:100%;">
                    <div style="width:50%;float:left;display:block;">
                        <t t-set="have_directions" t-value="0"/>
                        <t t-if="doc.partner_invoice_id and (doc.partner_invoice_id != doc.partner_id)">
                            <t t-set="have_directions" t-value="1"/>
                        </t>
                        <t t-if="doc.partner_shipping_id and (doc.partner_shipping_id != doc.partner_id)">
                            <t t-set="have_directions" t-value="1"/>
                        </t>
                        <t t-if="have_directions == 0">
                            <span style="color:white">aaaa</span>
                        </t>
                        <t t-else="">
                            <t t-if="doc.partner_invoice_id and (doc.partner_invoice_id != doc.partner_id)">
                                <strong>Direcci贸n de Facturaci贸n:</strong>
                                <div>
                                    <div style="width:100%;display:block;">
                                        <t t-if="doc.partner_id.parent_id and (doc.partner_id.parent_id.name != doc.partner_invoice_id.name)">
                                            <span t-esc="doc.partner_id.parent_id.name"/>
                                            <span>,</span>
                                        </t>
                                        <span t-esc="doc.partner_invoice_id.name"/>
                                    </div>
                                    <span style="width:100%;display:block;" t-esc="doc.partner_invoice_id.street"/>
                                    <div style="width:100%;display:block;">
                                        <span t-esc="doc.partner_invoice_id.zip"/>
                                        <span></span>
                                        <span t-esc="doc.partner_invoice_id.city"/>
                                    </div>
                                    <span style="width:100%;display:block;"
                                          t-esc="doc.partner_invoice_id.country_id.name"/>
                                    <span t-if="doc.partner_invoice_id.phone" style="width:100%;display:block;"
                                          t-esc="doc.partner_invoice_id.phone"/>
                                </div>
                            </t>
                            <t t-if="doc.partner_shipping_id and (doc.partner_shipping_id != doc.partner_id)">
                                <strong>Direcci贸n de Entrega:</strong>
                                <div>
                                    <div style="width:100%;display:block;">
                                        <t t-if="doc.partner_id.parent_id and (doc.partner_id.parent_id.name != doc.partner_shipping_id.name)">
                                            <span t-esc="doc.partner_id.parent_id.name"/>
                                            <span>,</span>
                                        </t>
                                        <span t-esc="doc.partner_shipping_id.name"/>
                                    </div>
                                    <span style="width:100%;display:block;" t-esc="doc.partner_shipping_id.street"/>
                                    <div style="width:100%;display:block;">
                                        <span t-esc="doc.partner_shipping_id.zip"/>
                                        <span></span>
                                        <span t-esc="doc.partner_shipping_id.city"/>
                                    </div>
                                    <span style="width:100%;display:block;"
                                          t-esc="doc.partner_shipping_id.country_id.name"/>
                                    <span t-if="doc.partner_shipping_id.phone" style="width:100%;display:block;"
                                          t-esc="doc.partner_shipping_id.phone"/>
                                </div>
                            </t>
                        </t>
                    </div>
                    <div style="width:50%;float:left;display:block;">
                        <div>
                            <div style="width:100%;display:block;">
                                <t t-if="doc.partner_id.parent_id">
                                    <span t-esc="doc.partner_id.parent_id.name"/>
                                    <span>,</span>
                                </t>
                                <span t-esc="doc.partner_id.name"/>
                            </div>
                            <span style="width:100%;display:block;" t-esc="doc.partner_id.street"/>
                            <div style="width:100%;display:block;">
                                <span t-esc="doc.partner_id.zip"/>
                                <span></span>
                                <span t-esc="doc.partner_id.city"/>
                            </div>
                            <span style="width:100%;display:block;" t-esc="doc.partner_id.country_id.name"/>
                            <span t-if="doc.partner_id.phone" style="width:100%;display:block;"
                                  t-esc="doc.partner_id.phone"/>
                        </div>
                    </div>
                    <div style="clear:both;"/>
                </div>

            </xpath>

            <xpath expr="//div[@id='informations']" position="replace">
                <div class="row mt32 mb32" id="informations">
                    <div t-if="doc.client_order_ref" class="col-auto mw-100 mb-2">
                        <strong>Su Referencia:</strong>
                        <p class="m-0" t-field="doc.client_order_ref"/>
                    </div>
                    <div t-if="doc.date_order and doc.state not in ['draft','sent']" class="col-auto mw-100 mb-2">
                        <strong>Fecha:</strong>
                        <p class="m-0" t-field="doc.date_order" t-options='{&quot;format&quot;: &quot;dd/MM/yyyy&quot;}'/>
                    </div>
                    <div t-if="doc.date_order and doc.state in ['draft','sent']" class="col-auto mw-100 mb-2">
                        <strong>Fecha de presupuesto:</strong>
                        <p class="m-0" t-field="doc.date_order" t-options='{&quot;format&quot;: &quot;dd/MM/yyyy&quot;}'></p>
                    </div>
                    <div t-if="doc.validity_date and doc.state in ['draft', 'sent']" class="col-auto mw-100 mb-2" name="expiration_date">
                        <strong>Vencimiento:</strong>
                        <p class="m-0" t-field="doc.validity_date" t-options='{&quot;format&quot;: &quot;dd/MM/yyyy&quot;}'/>
                    </div>
                    <div t-if="doc.user_id.name" class="col-auto mw-100 mb-2">
                        <strong>Oferta realizada por:</strong>
                        <p class="m-0" t-field="doc.user_id"/>
                    </div>
                </div>

            </xpath>
            <xpath expr="//table" position="replace">
                <table class="table table-sm o_main_table" style="table-layout: fixed; width:100%;">
                    <thead>
                        <tr>
                            <th name="th_code" style="width:20%!important;" class="text-left">C贸digo</th>
                            <th name="th_description" style="width:45%!important;" class="text-left">Descripcion</th>
                            <th name="th_quantity" style="width:10%!important;" class="text-right">Cantidad</th>
                            <th name="th_priceunit" style="width:10%!important;" class="text-right">Precio/U</th>
                            <th name="th_subtotal" style="width:15%!important;" class="text-right">
                                <t groups="account.group_show_line_subtotals_tax_excluded">Total</t>
                                <t groups="account.group_show_line_subtotals_tax_included">Total</t>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="sale_tbody">

                        <t t-set="current_subtotal" t-value="0"/>

                        <t t-foreach="doc.order_line" t-as="line">

                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                               groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                               groups="account.group_show_line_subtotals_tax_included"/>

                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type">
                                    <td style="width:20%!important;">
                                        <span t-field="line.product_id.default_code"/>
                                    </td>
                                    <t t-set="description_name" t-value="line.name"/>
                                    <t t-set="code_position" t-value="description_name.find(']') + 1"/>
                                    <t t-if="code_position &gt; 0">
                                        <t t-set="description_name" t-value="description_name[code_position:]"/>
                                    </t>
                                    <td name="td_name" style="width:45%!important;">
                                        <t t-if="doc.state not in ['draft','sent']">
                                            <span t-esc="description_name"/>
                                        </t>
                                        <t t-else="">
                                            <t t-if="doc.state in ['draft','sent'] and line.product_id.description">
                                                <span t-field="line.product_id.description"/>
                                            </t>
                                            <t t-else="">
                                                <span t-esc="description_name"/>
                                            </t>
                                        </t>


                                    </td>
                                    <td name="td_quantity" class="text-right">
                                        <span t-esc="'%.0f'%line.product_uom_qty"/>
                                    </td>
                                    <td name="td_priceunit" class="text-right">
                                        <span t-esc="'%.2f'%line.price_unit"/>
                                    </td>
                                    <td name="td_subtotal" class="text-right o_price_total">
                                        <span t-esc="'%.2f'%line.price_subtotal"
                                              groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <span t-esc="'%.2f'%line.price_total"
                                              groups="account.group_show_line_subtotals_tax_included"/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td name="td_section_line" colspan="99">
                                        <span t-field="line.name"/>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td name="td_note_line" colspan="99">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                            </tr>

                            <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-right">
                                    <td name="td_section_subtotal" colspan="99">
                                        <strong class="mr16">Subtotal</strong>
                                        <span t-esc="current_subtotal"
                                              t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>
            </xpath>


