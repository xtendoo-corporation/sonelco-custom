<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
        <template id="report_saleorder_document_sonelco"
                  inherit_id="sale.report_saleorder_document">

            <xpath expr="//div[@id='informations']/div[@t-if='doc.user_id.name']" position="replace">
                <div t-if="doc.user_id.name" class="col-auto mw-100 mb-2">
                    <p>
                        <strong>Offer made by:</strong><br/>
                        <span t-field="doc.user_id"/>
                    </p>
                </div>
            </xpath>

            <xpath expr="//table/thead/tr/th[@name='th_description']" position="before">
                <th name="th_code" colspan="3" class="text-left">Code</th>
            </xpath>

            <xpath
                expr="//table/tbody[hasclass('sale_tbody')]//td[@name='td_name']"
                position="before"
            >
                <td colspan="3">
                    <span t-field="line.product_id.default_code"/>
                </td>
            </xpath>

            <xpath expr="//table/thead/tr/th[@name='th_priceunit']" position="replace">
                <th name="th_priceunit" class="text-right">Price</th>
            </xpath>

            <xpath
                expr="//table/thead/tr/th[@name='th_taxes']"
                position="replace"
            >
            </xpath>

            <xpath
                expr="//table/tbody[hasclass('sale_tbody')]//td[@name='td_priceunit']"
                position="replace"
            >
                <td name="td_priceunit" class="text-right">
                    <span t-esc="'%.2f' % line.price_unit" />
                </td>
            </xpath>

            <xpath
                expr="//table/tbody[hasclass('sale_tbody')]//td[@name='td_name']"
                position="replace"
            >
                <t t-set="description_name" t-value="line.name"/>
                <t t-set="code_position" t-value="description_name.find(']') + 1"/>
                <t t-if="code_position &gt; 0">
                    <t t-set="description_name" t-value="description_name[code_position:]" />
                </t>
                <td name="td_name">
                    <t t-if="doc.state not in ['draft','sent']">
                        <span t-esc="description_name"/>
                    </t>
                    <t t-if="doc.state in ['draft','sent'] and line.product_id.description">
                        <span t-field="line.product_id.description"/>
                    </t>
                    <t t-else="">
                        <span t-esc="description_name"/>
                    </t>
                </td>
            </xpath>

            <xpath
                expr="//table/tbody[hasclass('sale_tbody')]//td[@name='td_quantity']"
                position="replace"
            >
                <td name="td_quantity" class="text-right">
                    <span t-esc="'%.0f' % line.product_uom_qty"/>
                </td>
            </xpath>

            <xpath
                expr="//table/tbody[hasclass('sale_tbody')]//td[@name='td_subtotal']"
                position="replace"
            >
                <td name="td_subtotal" class="text-right o_price_total">
                    <span t-esc="'%.2f' % line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                    <span t-esc="'%.2f' % line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                </td>
            </xpath>

            <xpath
                expr="//table/tbody[hasclass('sale_tbody')]//td[@name='td_taxes']"
                position="replace"
            >
            </xpath>

        </template>
    </data>
</odoo>
