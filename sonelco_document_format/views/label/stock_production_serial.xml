                                    <img t-if="o.name"
                                         t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.name, 1200, 150)"
                                         style="width:140%;height:15%;margin-left:-20%;"/>
