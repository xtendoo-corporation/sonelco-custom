<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

       <report
            id="product_label"
            string="Etiqueta producto"
            model="stock.production.lot"
            report_type="qweb-pdf"
            name="sonelco_document_format.report_product_label"
        />
        <template id="report_product_label">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t
                        t-call="sonelco_document_format.report_label"
                    />
                </t>
            </t>
        </template>

        <record id="product_label" model="ir.actions.report">
            <field name="paperformat_id" ref="label_papperformat" />
        </record>

        <template id="sonelco_document_format.report_label">
            <t t-name="sonelco_document_format.report_label">
                 <t t-call="web.basic_layout">
                    <div class="page">
                        <div class="oe_structure"/>
                        <div id="table_label" style="width:100%;display:block;margin:0; padding:0;">
                            <div style="text-align: center;width:20%;float:left;height:150px;position:relative;left:-5%;overflow:hidden">
                                <div style="width:100%;-webkit-transform: rotate(-90deg);z-index:3;position:absolute;">
                                    <img t-if="o.name" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.name, 1200, 300)" style="width:380%;height:22%;margin-left:-230%;"/>
                                    <span t-field="o.name" style="width:380%;margin-left:-200%;font-size:0.8em;top:-150%;"></span>
                                </div>
                            </div>
                            <div style="width:85%;float:left; height:150px;margin-left:-5%;">
                                <table style="width:100%;table-layout: fixed;">
                                    <tr>
                                        <td t-if="o.product_id.default_code" style="text-align:center;font-weight:bolder;font-size:1.1em;">
                                            <span t-field="o.product_id.default_code"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td t-if="o.product_id.name" style="text-align:center;font-size:0.9em;">
                                            <div style="text-overflow: ellipsis; overflow:hidden; height:60px;">
                                                 <span t-field="o.product_id.name"/>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <table>
                                                <tr>
                                                     <td style="width:20%; vertical-align:center;text-align:center;">
                                                        <span t-field="o.product_id.image_1920" t-options='{"widget": "image"}' style="witdh:100%;"/>
                                                    </td>
                                                    <td style="width:20%;text-align:center;">
                                                        <span t-field="o.company_id.favicon" t-options='{"widget": "image"}' style="witdh:100%;margin-left:10px;"/>
                                                    </td>
                                                    <td style="width:60%; text-align:center;margin:0;padding:0;">
                                                        <img t-if="o.name" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.name, 600, 150)" style="width:90%;height:20%;"/>
                                                        <span t-field="o.name" style="width:100%;font-size:0.8em;"></span>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
<!--                        <table style="width:100%;table-layout: fixed;">-->
<!--                            <tr>-->
<!--                                <td style="text-align: center;width:20%;border:2px solid green">-->
<!--                                    <div style="width:100%;display:block;-webkit-transform: rotate(-90deg);z-index:3;position:absolute;">-->
<!--                                        <img t-if="o.name" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.name, 600, 150)" style="width:140%;height:15%;margin-left:-20%;"/>-->
<!--                                    </div>-->


<!--                                </td>-->
<!--                                <td style="text-align:center;font-size:0.8em;">-->
<!--                                    Ln-->
<!--                                    <span t-field="o.name"/>-->
<!--                                </td>-->
<!--                            </tr>-->

<!--                        </table>-->
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
