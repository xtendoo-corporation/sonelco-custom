                                                    </t>
                                                    <span>Delivery Slip:</span>
                                                    <span t-field="picking.date_done" t-options="{'widget': 'date'}"/>
                                                    <span t-field="picking.name"/>
                                                </strong>
                                            </td>
                                        </tr>
                                        <!--                                        <tr t-else="">-->
                                        <!--                                            <td colspan="10">-->
                                        <!--                                                <strong>-->
                                        <!--                                                    <span>Without reference</span>-->
                                        <!--                                                </strong>-->
                                        <!--                                            </td>-->
                                        <!--                                        </tr>-->
