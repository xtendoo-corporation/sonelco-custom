<odoo>
    <data>

        <record id="sonelco_document_format.label_sonelco_100x150" model="report.paperformat">
            <field name="name">Label Packaging 100 x 150 New</field>
            <field name="default" eval="False"/>
            <field name="format">custom</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_right">0</field>
            <field name="margin_left">0</field>
            <field name="page_height">150</field>
            <field name="page_width">100</field>
            <field name="orientation">Portrait</field>
            <field name="header_line">False</field>
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

         <report
             string="Etiqueta"
             id="sonelco_document_format.label_packaging_sonelco_new"
             model="stock.quant.package"
             report_type="qweb-pdf"
             name="sonelco_document_format.report_label_packaging_sonelco_new"
             file="sonelco_document_format.report_label_packaging_sonelco_new"
             paperformat="sonelco_document_format.label_sonelco_100x150"
             print_report_name="'Etiqueta - %s' % (object.name)"
        />

       <template id="sonelco_document_format.report_label_packaging_sonelco_new">
            <t t-name="sonelco_document_format.report_label_packaging_sonelco_new">
                <t t-call="web.basic_layout">
                    <t t-foreach="docs" t-as="o">
                        <t t-set="num_copy" t-value="o.package"/>
                        <t t-if="num_copy == 0">
                            <t t-set="num_copy" t-value="1"/>
                        </t>
                        <t t-set="iteration" t-value="1"/>
                        <t t-foreach="int(num_copy)" t-as="">
                            <div class="page" style="border:5px solid black;width:106%;margin-left:-3%;">
                                <div class="container">
                                    <div style="width:100%;display:block;float:left;height:500px;">
                                        <div style="font-size:1.1em;width:35%;display:block;float:left;height:45px;margin-top:15px;margin-left:3%;color:black;font-weight:bolder;">
                                            <span>DESTINO/</span>
                                            <span>DESTINATION:</span>
                                        </div>
                                        <div style="font-size:1.2em;width:60%;display:block;float:left;margin-left:2%;margin-top:11px;font-weight:bolder;">
                                            <span style="text-align:center;width:100%;display:block;" t-field="o.delivery_id.partner_id.name"/>
                                        </div>
                                        <div style="clear:both;font-size:1em; height:30px;">
                                             <div style="width:36%;display:block;float:left;height:45px;margin-top:10px;margin-left:3%;color:black;font-weight:bolder;">
                                                <span>CONSIGNATARIO/</span>
                                                <span>CONSIGNEE:</span>
                                            </div>
                                            <div style="margin-left:2%;width:59%;display:block;float:left;text-align:center;margin-top:16px;font-weight:bolder;font-size:1.2em;">
                                                <span style="text-align:center;width:100%;display:block;" t-field="o.delivery_id.partner_id.name"/>
                                            </div>
                                            <div style="clear:both;width:24%;display:block;float:left;margin-top:16px;margin-left:3%;color:black;font-weight:bolder;">
                                                <span>DOMICILIO/ADDRESS:</span>
                                            </div>
                                             <div style="width:65%;display:block;float:left;margin-left:8%;text-align:letf;margin-top:6px;font-weight:bolder;">
                                                <span style="text-align:left;;width:100%;display:block;font-size:1.3em;" t-field="o.delivery_id.partner_id.street"/>
                                            </div>
                                            <div style="clear:both;width:27%;display:block;float:left;margin-top:10px;margin-left:3%;color:black;font-weight:bolder;">
                                                <span>POBLACION/CITY:</span>
                                            </div>
                                            <div style="width:62%;display:block;float:left;text-align:center;margin-left:6%;margin-top:10px;font-weight:bolder;">
                                                <span style="width:100%;display:block;font-size:1.3em;" t-field="o.delivery_id.partner_id.city"/>
                                            </div>
                                            <div style="clear:both;width:32%;display:block;float:left;margin-top:13px;margin-left:3%;color:black;font-weight:bolder;">
                                                <span>PAIS/COUNTRY:</span>
                                            </div>
                                            <div style="width:50%;display:block;float:left;margin-left:7%;text-align:center;margin-top:10px;font-weight:bolder;">
                                                <span style="width:100%;display:block;font-size:1.3em;" t-field="o.delivery_id.partner_id.country_id.name"/>
                                            </div>
                                        </div>
                                         <div style="clear:both;width:27%;display:block;float:left;height:50px;margin-top:15px;margin-left:3%;color:black;font-weight:bolder;">
                                            <span>MERCANCIA/</span>
                                            <span>GOODS:</span>
                                        </div>
                                        <div style="width:65%;display:block;float:left;margin-left:5%;margin-top:15px;height:45px;background-color:black;">
                                          <span style="font-size:1.1em;margin-top:-3px;text-align:center;width:100%;display:block;color:white;font-weight:bolder;">MATERIAL ELECTRONICO</span>
                                            <span style="font-size:1.1em;text-align:center;width:100%;display:block;color:white;font-weight:bolder;margin-top:-5px;">ELECTRIC MATERIAL</span>
                                        </div>

                                        <!--Footer-->
                                        <div style="height:5px;background-color:black;clear:both;width:110%;margin-left:-5%;"></div>
                                        <div style="clear:both;font-size:0.9em;margin-left:3%;">
                                            <div style="width:100%;">
                                                <div style="width:25%;float:left;">
                                                     <div style="width:70%;display:block;float:left;height:50px;margin-top:3px;color:black;font-weight:bolder;">
                                                        <span>NUM. DE BULTOS/</span>
                                                        <span>PACKING:</span>
                                                    </div>
                                                    <div style="margin-left:3%;width:27%;display:block;float:left;margin-top:10px;color:black;font-weight:bolder;">
                                                        <span t-esc="iteration"/><span>/</span><span t-field="o.package"></span>
                                                    </div>
                                                </div>
                                                <div style="width:37.5%;float:left;">
                                                    <div style="width:55%;display:block;float:left;height:50px;margin-top:3px;color:black;font-weight:bolder;">
                                                        <span>KILOS/</span>
                                                        <span>WEIGHT:</span>

                                                    </div>
                                                    <div style="margin-left:8%;width:37%;display:block;float:left;height:50px;margin-top:6px;color:black;font-weight:bolder;">
                                                        <span style="margin-top:5px;display:block;color:black;" t-field="o.shipping_weight"/>
                                                    </div>
                                                </div>
                                                <div style="width:37.5%;float:left;">
                                                    <div style="width:40%;display:block;float:left;height:50px;margin-top:3px;color:black;font-weight:bolder;">
                                                        <span>FECHA/</span>
                                                        <span>DATE:</span>
                                                    </div>
                                                    <div style="margin-left:3%;width:57%;display:block;float:left;height:50px;margin-top:6px;color:black;font-weight:bolder;">
                                                        <span style="margin-top:5px;display:block;color:black;" t-field="o.delivery_id.scheduled_date" t-options="{&quot;format&quot;: &quot;MM-dd-yyyy&quot;}"/>
                                                    </div>
                                                </div>

                                            </div>
                                            <div style="width:100%;clear:both;">
                                                <div style="width:62.5%;float:left;margin-top:20px;">
                                                     <div style="width:30%;display:block;float:left;margin-top:3px;color:black;font-weight:bolder;">
                                                        <span>ENVIO POR/</span>
                                                        <span>SEND BY:</span>
                                                    </div>
                                                   <div style="margin-left:3%;width:67%;display:block;float:left;margin-top:26px;color:black;text-align:center;font-weight:bolder;">
                                                        <span style="margin-top:5px;display:block;color:black;" t-field="o.delivery_id.carrier_id.name"/>
                                                    </div>
                                                </div>
                                                <div style="width:37.5%;float:left;">
                                                     <div style="width:55%;display:block;float:left;margin-top:23px;color:black;font-weight:bolder;">
                                                        <span>PORTES/</span>
                                                        <span>CARRIAGE:</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
<!--                                    <div style="height:5px;background-color:black;clear:both;width:106%;margin-left:-3%;"></div>-->

                                    <!--style="position:absolute;opacity:0.25;font-size:3em;width:100%;text-align:center;z-index:1000;-webkit-transform: rotate(-37deg);margin-top:450px;"-->
                                  <div style="width:100%;display:block;height:153px;clear:both;">
                                       <div>
                                             <div style="width:110%;background-color:black;margin-left:-5%;">
                                                 <img style="margin-left:30%;display:block;width:40%;margin-top:-25px;" src="/sonelco_document_format/static/src/img/logo_sonelco.png"/>
<!--                                                 <span style="margin-left:10%;display:block;width:90%;color:black;font-size:5em;font-weight:bold;">SONELCO</span>-->
                                             </div>
                                            <div style="margin-top:-3px;text-align:center;width:100%;color:black;font-size:1em;font-weight:bolder;">
                                                  <div>
                                                    <span t-if="res_company.name" t-field="res_company.name"/>
                                                </div>
                                                <div>
                                                    <span t-if="res_company.name" t-field="res_company.street"/>
                                                </div>
                                                 <div>
                                                    <span t-if="res_company.name">AUTOVIA DE LOGROÃ‘O. Km 2,400</span>
                                                </div>
                                                 <div>
                                                     <span>TLF.: </span>
                                                     <span t-field="res_company.phone"/>
                                                     <span>FAX.: 976373775</span>
                                                 </div>
                                                 <div>
                                                     <span t-field="res_company.zip"/>
                                                    <span> </span>
                                                    <span t-field="res_company.state_id"/>
                                                    <span> (</span>
                                                    <span t-field="res_company.country_id.name"/>
                                                    <span>)</span>
                                                 </div>
                                             </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <p style="page-break-before:always;"> </p>
                            <t t-set="iteration" t-value="iteration + 1"/>
                        </t>
                    </t>
                </t>
            </t>
       </template>
    </data>
</odoo>
