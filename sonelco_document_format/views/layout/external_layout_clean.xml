<?xml version="1.0" ?>
<odoo>
    <data>
        <template
            id="sonelco_document_format.external_layout_clean_xtendoo"
            inherit_id="web.external_layout_standard"
        >
            <xpath expr="//div[@name='company_address']" position="replace">
                <div class="col-6" name="company_address">
                    <p style="margin:0" t-field="company.name"></p>
                    <p style="margin:0" t-field="company.street"></p>
                    <p style="margin:0">
                        <span t-field="company.zip"/>
                        <span t-field="company.state_id.name"></span>
                        <span t-field="company.country_id.name"></span>
                    </p>
                    <p style="margin:0">Telf.
                        <span t-field="company.phone"/>
                    </p>
                    <p style="margin:0">Email:
                        <span t-field="company.email"/>
                    </p>
                    <t t-set="website_name" t-value="company.website"/>
                    <t t-set="code_position" t-value="website_name.find('w')"/>
                    <t t-if="code_position &gt; 0">
                        <t t-set="website_name" t-value="website_name[code_position:]"/>
                    </t>
                    <p style="margin:0">Web:
                        <span t-esc="website_name"/>
                    </p>
                </div>
                <t t-if="partner_invoice">
                    <div class="col-6" name="partner_invoice">
                        <strong>Dirección de facturación:</strong>
                        <div style="width:100%;display:block;">
                            <t t-if="partner_invoice.parent_id">
                                <span t-esc="partner_invoice.parent_id.name"/>
                                <span>,</span>
                            </t>
                            <span t-esc="partner_invoice.name"/>
                        </div>
                        <span style="width:100%;display:block;" t-esc="partner_invoice.street"/>
                        <div style="width:100%;display:block;">
                            <span t-esc="partner_invoice.zip"/>
                            <span></span>
                            <span t-esc="partner_invoice.city"/>
                        </div>
                        <div t-if="partner_invoice.vat">
                            <span>NIF:</span>
                            <span t-field="partner_invoice.vat"></span>
                        </div>

                        <span style="width:100%;display:block;" t-esc="partner_invoice.country_id.name"/>

                    </div>
                </t>
            </xpath>

            <xpath expr="//div[@class='text-center']" position="replace">
                <div class="text-center" style="border-top: 1px solid black;">
                    <ul class="list-inline mb4">
                        <li t-if="company.vat" class="list-inline-item d-inline"><t
                            t-esc="company.country_id.vat_label or 'Tax ID'"/>:
                            <span t-field="company.vat"/>
                        </li>
                    </ul>

                    <div name="financial_infos">
                        <span t-field="company.report_footer"/>
                    </div>

                    <div t-if="report_type == 'pdf'" class="text-muted">
                        Page:
                        <span class="page"/>
                        /
                        <span class="topage"/>
                    </div>
                </div>
            </xpath>


        </template>
    </data>
</odoo>
